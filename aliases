# Unix
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -l'
alias la='ls -la'

# Vim/neovim
alias e="nvim"

# Git
alias g="git"
alias gst="git status"
alias magit="vim -c MagitOnly"
alias gu="gitup"

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bi="bundle install"
alias bo="bundle open"

# Rails
alias r="bundle exec rails"
alias rs="r s -b 0.0.0.0"
alias rc="r c"
alias rdbm="r db:migrate"
alias rg="r g"

# Spring
alias ss="spring stop"
